<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.itwillbs.de.mes.mapper.WarehouseTransactionLotsMapper">

	<!-- 트랜잭션 LOT 등록 -->
	<insert id="insertWarehouseTransactionLots"
		useGeneratedKeys="true" keyProperty="idx"
		parameterType="kr.co.itwillbs.de.mes.dto.WarehouseTransactionLotsDTO">
		INSERT INTO t_warehouse_transaction_lots (
		<trim suffixOverrides=",">
			<if test='lotIdx != null and !("".equals(lotIdx.trim()))'>
				lot_idx,
			</if>
			<if
				test='transactionIdx != null and !("".equals(transactionIdx.trim()))'>
				transaction_idx,
			</if>
			<if test="quantity != null">
				quantity,
			</if>
			<if test='unit != null and !("".equals(unit.trim()))'>
				unit,
			</if>
			<if test='memo != null and !("".equals(memo.trim()))'>
				memo,
			</if>
			<if test='isDeleted != null and !("".equals(isDeleted.trim()))'>
				is_deleted,
			</if>
			reg_id,
			reg_date
		</trim>
		) VALUES (
		<trim suffixOverrides=",">
			<if test='lotIdx != null and !("".equals(lotIdx.trim()))'>
				#{lotIdx},
			</if>
			<if
				test='transactionIdx != null and !("".equals(transactionIdx.trim()))'>
				#{transactionIdx},
			</if>
			<if test="quantity != null">
				#{quantity},
			</if>
			<if test='unit != null and !("".equals(unit.trim()))'>
				#{unit},
			</if>
			<if test='memo != null and !("".equals(memo.trim()))'>
				#{memo},
			</if>
			<if test='isDeleted != null and !("".equals(isDeleted.trim()))'>
				#{isDeleted},
			</if>
			#{regId},
			now()
		</trim>
		)
	</insert>

	<!-- 트랜잭션 LOT 목록 조회 + 페이징 -->
	<select id="searchWarehouseTransactionLotsCount"
		parameterType="kr.co.itwillbs.de.mes.dto.WarehouseTransactionLotsSearchDTO"
		resultType="int">
		SELECT COUNT(*)
		FROM t_warehouse_transaction_lots w
		<where>
			<if test="lotIdx != null and !(''.equals(lotIdx.trim()))">
				AND w.lot_idx LIKE CONCAT('%', #{lotIdx}, '%')
			</if>
			<if
				test="transactionIdx != null and !(''.equals(transactionIdx.trim()))">
				AND w.transaction_idx LIKE CONCAT('%', #{transactionIdx}, '%')
			</if>
			<if test="isDeleted != null and !(''.equals(isDeleted.trim()))">
				AND w.is_deleted = #{isDeleted}
			</if>
			<if test="minQuantity != null">
				AND w.quantity &gt;= #{minQuantity}
			</if>
			<if test="maxQuantity != null">
				AND w.quantity &lt;= #{maxQuantity}
			</if>
		</where>
	</select>

	<!-- 트랜잭션 LOT 목록 조회 -->
	<select id="searchWarehouseTransactionLots"
		parameterType="kr.co.itwillbs.de.mes.dto.WarehouseTransactionLotsSearchDTO"
		resultType="kr.co.itwillbs.de.mes.dto.WarehouseTransactionLotsDTO">
		SELECT w.*
		FROM t_warehouse_transaction_lots w
		<where>
			<if test="lotIdx != null and !(''.equals(lotIdx.trim()))">
				AND w.lot_idx LIKE CONCAT('%', #{lotIdx}, '%')
			</if>
			<if
				test="transactionIdx != null and !(''.equals(transactionIdx.trim()))">
				AND w.transaction_idx LIKE CONCAT('%', #{transactionIdx}, '%')
			</if>
			<if test="isDeleted != null and !(''.equals(isDeleted.trim()))">
				AND w.is_deleted = #{isDeleted}
			</if>
			<if test="minQuantity != null">
				AND w.quantity &gt;= #{minQuantity}
			</if>
			<if test="maxQuantity != null">
				AND w.quantity &lt;= #{maxQuantity}
			</if>
		</where>
		ORDER BY w.idx ASC
		LIMIT #{pageDTO.size} OFFSET #{pageDTO.offset}
	</select>

	<!-- 트랜잭션 LOT 상세 조회 -->
	<select id="getWarehouseTransactionLotsByIdx"
		parameterType="Long"
		resultType="kr.co.itwillbs.de.mes.dto.WarehouseTransactionLotsDTO">
		SELECT *
		FROM t_warehouse_transaction_lots
		WHERE idx = #{idx}
	</select>

	<!-- 트랜잭션 LOT 정보 수정 -->
	<update id="updateWarehouseTransactionLots"
		parameterType="kr.co.itwillbs.de.mes.dto.WarehouseTransactionLotsDTO">
		UPDATE t_warehouse_transaction_lots
		<set>
			<if test='lotIdx != null and !("".equals(lotIdx.trim()))'>lot_idx = #{lotIdx},</if>
			<if
				test='transactionIdx != null and !("".equals(transactionIdx.trim()))'>transaction_idx = #{transactionIdx},</if>
			<if test='quantity != null'>quantity = #{quantity},</if>
			<if test='unit != null and !("".equals(unit.trim()))'>unit = #{unit},</if>
			<if test='memo != null and !("".equals(memo.trim()))'>memo = #{memo},</if>
			<if test='isDeleted != null and !("".equals(isDeleted.trim()))'>is_deleted = #{isDeleted},</if>
			<if test='modId != null and !("".equals(modId.trim()))'>mod_id = #{modId},</if>
			<if test='modDate != null and !("".equals(modDate.trim()))'>mod_date = now(),</if>
		</set>
		WHERE idx = #{idx}
	</update>


	<!-- 트랜잭션 LOT 삭제 (Soft Delete) -->
	<update id="deleteWarehouseTransactionLots" parameterType="map">
		UPDATE t_warehouse_transaction_lots
		is_deleted = 'Y',
		mod_date = NOW()
		WHERE idx = #{idx}
	</update>

</mapper>
