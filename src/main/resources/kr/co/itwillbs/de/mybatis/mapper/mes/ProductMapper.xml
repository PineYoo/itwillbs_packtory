<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.itwillbs.de.mes.mapper.ProductMapper">

	<!-- 상품 등록 -->
	<insert id="insertProduct" useGeneratedKeys="true"
		keyProperty="idx" parameterType="kr.co.itwillbs.de.mes.dto.ProductDTO">
		INSERT INTO t_product (
		<trim suffixOverrides=",">
			<if test='type != null and !("".equals(type.trim()))'>
				type,
			</if>
			<if test='name != null and !("".equals(name.trim()))'>
				name,
			</if>
			<if test='quantity != null'>
				quantity,
			</if>
			<if test='unit != null and !("".equals(unit.trim()))'>
				unit,
			</if>
			<if test='price != null'>
				price,
			</if>
			<if test='isDeleted !=null and !("".equals(isDeleted.trim()))'>
				is_deleted,
			</if>
			reg_id,
			reg_date,
		</trim>
		) VALUES (
		<trim suffixOverrides=",">
			<if test='type != null and !("".equals(type.trim()))'>
				#{type},
			</if>
			<if test='name != null and !("".equals(name.trim()))'>
				#{name},
			</if>
			<if test='quantity != null'>
				#{quantity},
			</if>
			<if test='unit != null and !("".equals(unit.trim()))'>
				#{unit},
			</if>
			<if test='price != null'>
				#{price},
			</if>
			<if test='isDeleted !=null and !("".equals(isDeleted.trim()))'>
				#{isDeleted},
			</if>
			#{regId},
			now(),
		</trim>
		)
	</insert>

	<!-- 목록 조회 + 페이징 -->
	<select id="searchProductCount"
		parameterType="kr.co.itwillbs.de.mes.dto.ProductSearchDTO"
		resultType="int">
		SELECT count(*)
		FROM t_product
		<where>
			<if test="type != null and type != ''">
				AND type = #{type}
			</if>
			<if test="name != null and name != ''">
				AND name LIKE CONCAT('%', #{name}, '%')
			</if>
			<if test="minQuantity != null">
				AND quantity &gt;= #{minQuantity}
			</if>
			<if test="maxQuantity != null">
				AND quantity &lt;= #{maxQuantity}
			</if>
			<if test="minPrice != null">
				AND price &gt;= #{minPrice}
			</if>
			<if test="maxPrice != null">
				AND price &lt;= #{maxPrice}
			</if>
		</where>
	</select>

	<!-- 상품 검색 + 목록 조회 -->
	<select id="searchProduct"
		parameterType="kr.co.itwillbs.de.mes.dto.ProductSearchDTO"
		resultType="kr.co.itwillbs.de.mes.dto.ProductDTO">

		SELECT
		p.*,
		c.minor_name AS type_name
		FROM t_product p
		LEFT JOIN t_commoncode_item c ON p.type = c.minor_code
		AND c.major_code = 'PRODUCT_TYPE'
		<where>
			<if test="type != null and type != ''">
				AND type = #{type}
			</if>
			<if test="name != null and name != ''">
				AND name LIKE CONCAT('%', #{name}, '%')
			</if>
			<if test="minQuantity != null">
				AND quantity &gt;= #{minQuantity}
			</if>
			<if test="maxQuantity != null">
				AND quantity &lt;= #{maxQuantity}
			</if>
			<if test="minPrice != null">
				AND price &gt;= #{minPrice}
			</if>
			<if test="maxPrice != null">
				AND price &lt;= #{maxPrice}
			</if>
		</where>

		ORDER BY p.idx ASC
		LIMIT #{pageDTO.size} OFFSET #{pageDTO.offset}
	</select>

	<!-- 상품 상세 조회 -->
	<select id="getProductByIdx" parameterType="Long"
		resultType="kr.co.itwillbs.de.mes.dto.ProductDTO">
		SELECT *
		FROM t_product
		WHERE idx = #{idx}
	</select>

	<!-- 상품 정보 수정 -->
	<update id="updateProduct"
		parameterType="kr.co.itwillbs.de.mes.dto.ProductDTO">
		UPDATE t_product
		<set>
			<if test='type != null and !("".equals(type.trim()))'>type = #{type},</if>
			<if test='name != null and !("".equals(name.trim()))'>name = #{name},</if>
			<if test='quantity != null'>quantity = #{quantity},</if>
			<if test='unit != null and !("".equals(unit.trim()))'>unit = #{unit},</if>
			<if test='price != null'>price = #{price},</if>
			<if test='isDeleted != null and !("".equals(isDeleted.trim()))'>is_deleted = #{isDeleted},</if>
			<if test='modId != null and !("".equals(modId.trim()))'>mod_id = #{modId},</if>
			<if test='modId !=null and !("".equals(modId.trim()))'>mod_date = now(),</if>
		</set>
		WHERE idx = #{idx}
	</update>

	<!-- 상품 정보 들고가기 (외부용) -->
	<select id="selectProductList"
		resultType="kr.co.itwillbs.de.mes.dto.ProductDTO">
		SELECT idx, name
		FROM t_product
		WHERE is_deleted = 'N'
	</select>

</mapper>
